{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "description": "This will be the boilerplate to start with NodeJS project.",
  "main": "app.js",
  "scripts": {
    "test": "mocha --reporter spec",
    "start": "nodemon",
    "dev": "npm run development",
    "development": "NODE_ENV=development && npm install && npm install -g nodemon && nodemon",
    "dev-yarn": "npm run development-yarn",
    "development-yarn": "NODE_ENV=development && yarn install && yarn add nodemon && nodemon",
    "prod": "npm run production",
    "production": "NODE_ENV=production && npm install --production && npm install -g pm2 && pm2 startOrReload pm2.json",
    "prod-yarn": "npm run production-yarn",
    "production-yarn": "NODE_ENV=production && yarn install --production && yarn add pm2 && pm2 startOrReload pm2.json"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:marprin/nodejs-boilerplate.git"
  },
  "author": "Marprin Hennes Muchri (marprin93@gmail.com)",
  "license": "MIT",
  "dependencies": {
    "async": "^2.4.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.17.2",
    "connect-flash": "^0.1.1",
    "connect-redis": "^3.3.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "crypto-js": "^3.1.9-1",
    "dotenv": "^4.0.0",
    "ejs": "^2.5.6",
    "express": "^4.15.3",
    "express-session": "^1.15.6",
    "express-useragent": "^1.0.12",
    "fs": "0.0.1-security",
    "helmet": "^3.6.1",
    "limiter": "^1.1.2",
    "method-override": "^2.3.10",
    "moment": "^2.21.0",
    "morgan": "^1.8.2",
    "mysql2": "^1.5.2",
    "path": "^0.12.7",
    "pm2": "^2.10.1",
    "redis": "^2.7.1",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "sequelize": "^4.35.2",
    "sequelize-cli": "^2.8.0",
    "underscore": "^1.8.3",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^3.5.3",
    "nodemon": "^1.17.1",
    "should": "^11.2.1",
    "sinon": "^3.2.0",
    "supertest": "^3.0.0"
  },
  "homepage": "https://github.com/marprin/nodejs-boilerplate#readme",
  "directories": {
    "test": "test"
  },
  "keywords": [
    "nodejs",
    "boilerplate"
  ]
}
